<Page x:Class="_1_2_4_Session.Pages.RedactDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1_2_4_Session.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedactDoctor"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel>
            <DataGrid x:Name="DateRaspisans" AutoGenerateColumns="False" IsReadOnly="True" FontSize="17" Height="280">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat='dd/MM/yy'}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Время" Binding="{Binding Time}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Специальное" Binding="{Binding IsSpech}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Утверждено" Binding="{Binding IsCanUse}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="New" Content="Новый" FontSize="17" Click="New_Click"></Button>
            <Button x:Name="Save" Content="Утвердить" FontSize="17" Click="Save_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
