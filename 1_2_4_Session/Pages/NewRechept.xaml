<Page x:Class="_1_2_4_Session.Pages.NewRechept"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1_2_4_Session.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewRechept">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Название:" FontSize="17"></TextBlock>
            <TextBox Text="{Binding Name}" FontSize="17"></TextBox>
            <TextBlock Text="Доза:" FontSize="17"></TextBlock>
            <TextBox Text="{Binding Doza}" FontSize="17"></TextBox>
            <TextBlock Text="Формат:" FontSize="17"></TextBlock>
            <TextBox Text="{Binding Format}" FontSize="17"></TextBox>
            <Button Name="Save" FontSize="17" Click="Save_Click" Content="Добавить" Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Page>
