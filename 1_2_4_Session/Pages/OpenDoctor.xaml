      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1_2_4_Session.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpenDoctor">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Вход" HorizontalAlignment="Center" FontSize="17"></TextBlock>
            <TextBox Name="DoctorText" FontSize="17"></TextBox>
            <Button Name="Open" FontSize="17" Content="Войти" Click="Open_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
